sub isPalindrome {	
	for($i = 0; i < length($sentences); $i++){
		$first = substr($sentences[$counter], $i, 1);
		$last = substr($sentences[$counter], $i - length($sentences[$counter]), 1);
		if($first != $last){
			last;
		}
	}
	return 1;
}

